@using Exam21st.Areas.Admin.ViewModels;
@model List<ServicesIndexVM>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Services</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Services" asp-action="Create" class="btn btn-primary">
                <span>Create a Service</span>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-bordered table table-striped my-2">
        <thead>
            <tr>
                <th> Id</th>
                <th> Service Name</th>
                <th> Service Description</th>
                <th> Service Image</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td><img src="/images/@item.ImageUrl"/></td>
                        <td>
                            <a asp-controller="Services" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                                <span>Update</span>
                            </a>
                            <a asp-controller="Services" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">
                                <span>Delete</span>
                            </a>
                        </td>

                    </tr>
                }
            }
            else
            {
               <h1>no data</h1>
            }

            
        </tbody>
    </table>
</div>
